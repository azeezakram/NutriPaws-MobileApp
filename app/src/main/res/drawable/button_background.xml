<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#80000000"/> <!-- Pressed background color -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- Pressed border color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Default background color -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF"/> <!-- Default border color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
